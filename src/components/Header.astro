---
import ScrambleHover from "@/components/ScambleHover";
import { HeaderItems } from "@/config";
import type { HeaderItem } from "@/types";
import CenterUnderline from "@/components/AnimateUnerline";
---

<header class="flex items-center justify-between gap-x-6 py-4 w-full max-w-2xl mx-auto px-5 lg:px-6 text-2xl">
  <a href="/" class="no-underline">
    <ScrambleHover text="Riyan" client:load maxIterations={7} />
  </a>
  <nav class="flex gap-x-4">
    {
      HeaderItems.map((item: HeaderItem) => (
        <a href={item.link}>
          <CenterUnderline label={item.title} client:load />
        </a>
      ))
    }
  </nav>
</header>
